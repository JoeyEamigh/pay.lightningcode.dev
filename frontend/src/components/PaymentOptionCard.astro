---
import CheckIcon from './CheckIcon.astro';
import XMarkIcon from './XMarkIcon.astro';

export type PaymentOption = {
  name: string;
  description: string;
  fee: string;
  href: string;
  pros: string[];
  cons: string[];
};

interface Props {
  option: PaymentOption;
}

const {
  option: { name, description, fee, href, pros, cons },
} = Astro.props;
---

<section class="divide-y divide-gray-200 rounded-lg border border-gray-200 shadow-sm">
  <div class="p-6">
    <h2 class="text-lg font-medium leading-6 text-gray-50">{name}</h2>
    <p class="mt-4 text-sm text-gray-300">{description}</p>
    <p class="mt-8">
      <span class="text-4xl font-bold tracking-tight text-gray-50">{fee}</span>
    </p>
    <a
      href={href}
      class="mt-8 block w-full rounded-md border border-gray-300 bg-gray-800 py-2 text-center text-sm font-semibold text-white hover:bg-gray-900">
      Choose {name}
    </a>
  </div>
  <div class="px-6 pb-8 pt-6">
    <h3 class="text-sm font-medium text-gray-50">Pros</h3>
    <ul role="list" class="mt-4 space-y-4">
      {
        pros.map(pro => (
          <li class="flex space-x-3">
            <CheckIcon className="h-5 w-5 flex-shrink-0 text-green-500" />
            <span class="text-sm text-gray-300">{pro}</span>
          </li>
        ))
      }
    </ul>
    <h3 class="mt-8 text-sm font-medium text-gray-50">Cons</h3>
    <ul role="list" class="mt-4 space-y-4">
      {
        cons.map(con => (
          <li class="flex space-x-3">
            <XMarkIcon className="h-5 w-5 flex-shrink-0 text-red-500" />
            <span class="text-sm text-gray-300">{con}</span>
          </li>
        ))
      }
    </ul>
  </div>
</section>
